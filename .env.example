# =============================================================================
# Prompt Guru - Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=promptguru
POSTGRES_PASSWORD=promptguru_dev
POSTGRES_DB=promptguru
DB_PORT=5432

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
API_PORT=4000

# JWT Authentication
# IMPORTANT: Generate a secure random string for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------
# Adminer (Database Admin UI) - only with 'tools' profile
ADMINER_PORT=8080

# -----------------------------------------------------------------------------
# Production Settings (docker-compose.prod.yml)
# -----------------------------------------------------------------------------
# HTTP_PORT=80
# REGISTRY=ghcr.io
# REPOSITORY=your-username/prompt-guru
# TAG=latest
