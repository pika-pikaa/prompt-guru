# =============================================================================
# Prompt Guru Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=4000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://promptguru:promptguru_dev@localhost:5432/promptguru

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random string for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Frontend URL for CORS headers
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# AI Model API Keys (Optional - for direct API calls)
# -----------------------------------------------------------------------------
# Uncomment and fill in if using direct API integration
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_AI_API_KEY=...
# XAI_API_KEY=...
# PERPLEXITY_API_KEY=pplx-...
